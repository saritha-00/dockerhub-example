pipeline {
    agent any 
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                }
            }
        stage('Build') {
            steps {
                script {
                sh 'sudo docker build -t sarithaladella/docker .'
                }
            }
        }
        stage('Login') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsID: 'sarithaladella-dockerhub', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKER_USERNAME')])
                    //Login
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
                    //push
                        sh 'docker push sarithaladella/docker'
            }
        }
      }
   }
}

