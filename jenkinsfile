pipeline {
    agent any 
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                }
            }
        stage('Build') {
            steps {
                script {
                sh 'sudo docker build -t sarithaladella/doc-img:V1 .'
                }
            }
        }
        stage('Login') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsID: 'sarithaladella-dockerhub', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKER_USERNAME')])
                    //Login
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
            }
        }
        stage('Push') {
            steps {
                sh 'docker push sarithaladella/doc-img:V1'
            }
        }
    }
   
}
