pipeline {
    agent any 
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                }
            }
        stage('Build') {
            steps{
                script {
                sh 'docker build -t sarithaladella/docker .'
                
        
        stage('Login') {
            
                script {
                    withCredentials([usernamePassword(credentialsID: 'key', passwordVariable: 'DOCKERHUB_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]){
                    //Login
                        sh "docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD"
                    //push
                        sh 'docker push sarithaladella/docker'
                }
            }
        }
      }
   }
}
}
}

